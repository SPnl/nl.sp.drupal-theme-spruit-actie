.site-header,
.page-wrapper:after {
  display: none;
}

.blauw {
 color: #24408f;
}
.groen {
  color: #88b040;
}
.header-nzf h1 {
  font-size: 5rem;
  line-height: 2rem;
}

.form-submit {
  background: #88b040;
  border: 1px solid #88b040;
}
.form-submit:hover {
  background: #fff;
  border: 1px solid #88b040;
  color: #88b040;
}
.form-item .form-text:focus {
  background: #fff;
  border-color: #88b040;
}
.content a,
.content a:link {
  color: #24408f;
}

.form-type-checkbox input:checked + label:before {
    content: 'v';
    color: #88b040;
    background: #fff;
    border-color: #88b040;
}
.form-type-checkbox input:checked + label {
    color: #fff;
}
.no-touch .form-type-checkbox:hover input:checked + label:before {
    color: #88b040;
}


.content .contact-form form {
  max-width: 960px;
}
.form-item input {
  max-width: 640px;
}
.form-itme form-actions {
  max-width: 640px;
}

.social-share li a {
    color: #24408f;
}
.social-share li a:hover {
    color: #88b040;
}
.social-share li span {
    background: #88b040;
}

.contact-form {
  background: #24408f;
  color: #fff;
  padding: 2rem 0 4rem 0;
}
.primary-content .content .contact-form h2 {
  margin: 0;
  padding: 0;
}
.primary-content .content .contact-form p {
  color: #fff;
  font-family: HelveticaNeueLTStd-BdCn, 'Sans serif';
  max-width: 640px;
  margin: 1rem 0;
}
.contact-form .form-actions .form-submit {
  margin: initial !important;
  max-width: 640px;
}
.contact-form .webform-component--disclaimer p {
    padding-left: 1.4rem;
}





/* mobiel fix */
@media only screen and (max-width: 830px){
  .header-nzf h1 {
    font-size: 4rem;
    line-height: 2rem;
}
@media only screen and (max-width: 675px){
  .header-nzf h1 {
    font-size: 3rem;
    line-height: 1rem;
}
@media only screen and (max-width: 515px){
  .header-nzf h1 {
    font-size: 2rem;
    line-height: 1rem;
}
@media only screen and (max-width: 360px){
  .header-nzf h1 {
    font-size: 1.7rem;
    line-height: 1rem;
}
